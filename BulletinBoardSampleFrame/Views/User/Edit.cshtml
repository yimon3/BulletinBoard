@model BulletinBoardSampleFrame.ViewModel.User.UserViewModel
@{
    ViewBag.Title = "Edit";
}

<h2>Update User</h2>
<p style="text-align:center">@Html.ActionLink("ChangePassword", "ChangePassword","Login")</p>
<br />
<br>
@using (Html.BeginForm("EditConfirm", "User"))
{
    @Html.HiddenFor(m => m.Id)
    <form class="form-horizontal" id="form1">
        <div class="form-group row">
            <div class="col-sm-2">
                @Html.LabelFor(m => m.Name)
            </div>
            <div class="col-sm-3">
                @Html.TextBoxFor(m=>m.Name, new { @class = "form-control" , required = "required"})
                @Html.HiddenFor(m => m.Name)
            </div>
            <label style="color: red">*</label>
        </div>
        <div class="form-group row">
            <div class="col-sm-2">
                @Html.LabelFor(m => m.Email)
            </div>
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", required = "required" })
                @Html.HiddenFor(m => m.Email)
            </div>
            <label style="color: red">*</label>
        </div>
        <div class="form-group row">
            <div class="col-sm-2">
                @Html.LabelFor(m => m.Type)
            </div>
            <div class="col-sm-3">
                <select name="type" id="type" required="required" class="form-control" value="@Html.DisplayFor(m=>m.Type)">
                    <option value="admin">Admin</option>
                    <option value="user">User</option>
                    <option value="visitor">Visitor</option>
                </select>
                @Html.HiddenFor(m => m.Type)
            </div><label style="color: red">*</label>
        </div>
        <div class="form-group row">
            <div class="col-sm-2">
                @Html.LabelFor(m => m.Phone)
            </div>
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control"})
                @Html.HiddenFor(m => m.Phone)
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2">
                @Html.LabelFor(m => m.Dob)
            </div>
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m.Dob, new { @class = "form-control datepicker" })
                @Html.HiddenFor(m => m.Dob)
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2">
                @Html.LabelFor(m => m.Address)
            </div>
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m.Address, new { @class = "form-control"})
                @Html.HiddenFor(m => m.Address)
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2">
                @Html.LabelFor(m => m.Profile)
            </div>
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m.Profile, new { type = "file", id = "imgInp", @class = "form-control", required = "required" })
                @Html.HiddenFor(m => m.Profile)
            </div>
            <label style="color: red">*</label>
        </div>
        <div class="form-group row">
            <div class="col-sm-2"></div>
            <div class="col-sm-3">
                <button type="submit" class="btn btn-primary">Confirm</button>
                <input type="button" class="btn btn-default" value="Clear" onclick="location.href='@Url.Action("ClearEditInput", "User")'" />
            </div>
        </div>
    </form>
}
<link href="~/Resources/lib/css/jquery-ui.min.css" rel="stylesheet" />
@section scripts
{
    <script src="~/Resources/lib/js/jquery-ui-1.12.1.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".datepicker").datepicker({
                dateFormat: "dd-mm-yy",
                changeMonth: true,
                changeYear: true,
                yearRange: "-100:+0"
            });
        });
    </script>
}

