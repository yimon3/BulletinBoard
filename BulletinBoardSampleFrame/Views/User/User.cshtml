@model BulletinBoardSampleFrame.ViewModel.User.UserViewModel
@{
    ViewBag.Title = "UserForm";
}
<h2>Create User</h2>
@using (Html.BeginForm("ConfirmUser", "User"))
{
    <form class="form-horizontal" id="form1">
        <div class="form-group">
            <div class="col-sm-2">
                @Html.LabelFor(m => m.name)
            </div>
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m.name, new { @class = "form-control", required = "required" })
            </div>
            <label style="color: red">*</label>
        </div>
        <div class="form-group">
            <div class="col-sm-2">
                @Html.LabelFor(m => m.email)
            </div>
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m.email, new { @class = "form-control", required = "required" })
            </div>
            <label style="color: red">*</label>
        </div>
        <div class="form-group">
            <div class="col-sm-2">
                @Html.LabelFor(m => m.password)
            </div>
            <div class="col-sm-3">
                @Html.PasswordFor(m => m.password, new { @class = "form-control", required = "required" })
            </div>
            <label style="color: red">*</label>
        </div>
        <div class="form-group">
            <div class="col-sm-2">
                @Html.LabelFor(m => m.confirmPassword)
            </div>
            <div class="col-sm-3">
                @Html.PasswordFor(m => m.confirmPassword, new { @class = "form-control", required = "required" })
            </div>
            <label style="color: red">*</label>
        </div>
        <div class="form-group">
            <div class="col-sm-2">
                @Html.LabelFor(m => m.type)
            </div>
            <div class="col-sm-3">
                <select name="type" id="type" required="required" class="form-control" value="">
                    <option value="admin">Admin</option>
                    <option value="user">User</option>
                    <option value="visitor">Visitor</option>
                </select>
            </div><label style="color: red">*</label>
        </div>
        <div class="form-group">
            <div class="col-sm-2">
                @Html.LabelFor(m => m.phone)
            </div>
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m.phone, new { @class = "form-control" })
            </div>
        </div><br /><br />
        <div class="form-group">
            <div class="col-sm-2">
                @Html.LabelFor(m => m.dob)
            </div>
            <div class="col-sm-3">
                @Html.TextBoxFor(m=>m.dob, new { @class="datepicker form-control"})
            </div>
        </div><br />
        <div class="form-group">
            <div class="col-sm-2">
                @Html.LabelFor(m => m.address)
            </div>
            <div class="col-sm-3">
                @Html.TextAreaFor(m => m.address, new { @class = "form-control" })
            </div>
        </div><br /><br />
        <div class="form-group">
            <div class="col-sm-2">
                @Html.LabelFor(m => m.profile)
            </div>
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m.profile, new { type = "file" , id= "imgInp" , @class="form-group" , required="required"})
                <img id="profile" src="#" alt="picture" width="100" />
            </div>
            <label style="color: red">*</label>
        </div><br /><br /><br /><br />
        <div class="form-group">
            <div class="col-sm-2"></div>
            <div class="col-sm-3">
                <button type="submit" class="btn btn-primary">Confirm</button>
                <input type="reset" id="btnClear" value="Clear" class="btn btn-default"/>
            </div>
        </div>
    </form>
}
<link href="~/Resources/css/jquery-ui.min.css" rel="stylesheet" />
@section scripts
{
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".datepicker").datepicker({
                dateFormat: "dd-mm-yy",
                changeMonth: true,
                changeYear: true,
                yearRange: "-100:+0"
            });
        });

        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#profile').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
        $("#imgInp").change(function () {
            readURL(this);
        });

    </script>
}



