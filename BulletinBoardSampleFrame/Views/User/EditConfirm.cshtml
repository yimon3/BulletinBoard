@model BulletinBoardSampleFrame.ViewModel.User.UserViewModel
@{
    ViewBag.Title = "EditConfirm";
}
@using (Html.BeginForm("ConfirmEditUser", "User"))
{
        <h2>Update User Confirmation</h2>
        <hr />
        <div class="form-group">
            <div class="col-sm-3">
                @Html.LabelFor(m => m.Name)
            </div>
            @Html.DisplayFor(m=>m.Name)
            @Html.HiddenFor(m=>m.Name)
        </div>
        <div class="form-group">
            <div class="col-sm-3"></div>
            <img src="~/Resources/lib/images/@Model.Profile" width="100" height="100" />
            @Html.HiddenFor(m => m.Profile)
        </div>
        <div class="form-group">
            <div class="col-sm-3">
                @Html.LabelFor(m => m.Email)
            </div>
            @Html.DisplayFor(m => m.Email)
            @Html.HiddenFor(m => m.Email)
        </div>
        <div class="form-group">
            <div class="col-sm-3">
                @Html.LabelFor(m => m.Type)
            </div>
            @Html.DisplayFor(m => m.Type)
            @Html.HiddenFor(m => m.Type)
        </div>
        <div class="form-group">
            <div class="col-sm-3">
                @Html.LabelFor(m => m.Phone)
            </div>
            @Html.DisplayFor(m => m.Phone)
            @Html.HiddenFor(m => m.Phone)
        </div>
        <div class="form-group">
            <div class="col-sm-3">
                @Html.LabelFor(m => m.Dob)
            </div>
            @Html.DisplayFor(m => m.Dob)
            @Html.HiddenFor(m => m.Dob)
        </div>
        <div class="form-group">
            <div class="col-sm-3">
                @Html.LabelFor(m => m.Address)
            </div>
            @Html.DisplayFor(m => m.Address)
            @Html.HiddenFor(m => m.Address)
        </div>
        <br />
        <div class="form-group">
            <div class="col-sm-3">
                <button type="submit" class="btn btn-primary">Update</button>
                @Html.ActionLink("Cancel", "Edit", new { id = Model.Id, @class = "btn btn-default"})
                @Html.HiddenFor(m => m.Id)
            </div>
        </div>
        <br />
}


