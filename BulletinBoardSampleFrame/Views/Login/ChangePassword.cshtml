@model BulletinBoardSampleFrame.ViewModel.Login.LoginModel
@{
    ViewBag.Title = "ChangePassword";
}
@if (Session["Name"] != null)
{
    <p style="color:darkred">Welcome @Session["Name"].ToString()!</p>
}<br />
<h2>Change Password</h2>
<br /><br />
@using (Html.BeginForm("ChangePassword","Login", FormMethod.Post))
{
    if (ViewData["Message"] != null)
    {
        <p style="color:red" id="popupdiv">@ViewData["Message"]</p>
        <hr />
    }
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-sm-2">
                <label for="password">Old Password</label>
            </div>
            <div class="col-sm-3">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", required = "required" })
            </div>
            <label style="color:red">*</label>
        </div>
        <div class="form-group">
            <div class="col-sm-2">
                <label for="password">New Password</label>
            </div>
            <div class="col-sm-3">
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", required = "required" })
            </div>
            <label style="color:red">*</label>
        </div>
        <div class="form-group">
            <div class="col-sm-2">
                <label for="password">Confirm New Password</label>
            </div>
            <div class="col-sm-3">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", required = "required" })
            </div>
            <label style="color:red">*</label>
        </div><br />
        <div class="form-group">
            <div class="col-sm-2"></div>
            <input type="submit" class="btn btn-primary" value="Change" />
            <input type="button" class="btn btn-default" value="Clear" onclick="location.href='@Url.Action("ClearInput", "Login")'" />
        </div>
    </div>
}
@section scripts
{
    <script src="~/Resources/lib/js/jquery.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            if ($('#popupdiv').html() != '') {
                $("#popupdiv").show();
            }
        });
    </script>
}


