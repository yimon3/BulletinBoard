@model BulletinBoardSampleFrame.ViewModel.Login.LoginModel
@{
    Layout = null;
}
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")

@using (Html.BeginForm("ForgotPassword", "Login", FormMethod.Post))
{
<div class="container-fluid">
    <h3>Forgot Your Password?</h3><br />
    <h4>Change Password</h4>
    <br />
    <br />
    <div class="form-group">
        <div class="col-sm-2">
            <label for="password">Old Password</label>
        </div>
        <div class="col-sm-3">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", required = "required" })
        </div>
        <label style="color:red">*</label>
    </div>
    <div class="form-group">
        <div class="col-sm-2">
            <label for="password">New Password</label>
        </div>
        <div class="col-sm-3">
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", required = "required" })
        </div>
        <label style="color:red">*</label>
    </div>
    <div class="form-group">
        <div class="col-sm-2">
            <label for="password">Confirm New Password</label>
        </div>
        <div class="col-sm-3">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", required = "required" })
        </div>
        <label style="color:red">*</label>
    </div><br />
    <div class="form-group">
        <div class="col-sm-3"></div>
        <input type="submit" class="btn btn-primary" value="Change" />
        <input type="button" class="btn btn-default" value="Clear" onclick="location.href='@Url.Action("ClearForgotPsw", "Login")'" />
    </div>
</div>
<div class="container body-content">
    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - SCM Bulletin Board</p>
    </footer>
</div>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")}

