@model BulletinBoardSampleFrame.ViewModel.Post.PostViewModel
@{
    ViewBag.Title = "ConfirmPost";
}

<h2>Create Post Confirmation</h2><br />
@using (Html.BeginForm("Save","Post"))
{
    <form class="form-horizontal">
        <div class="form-group">
            <div class="col-sm-3">
                @Html.LabelFor(model => model.Title)
            </div>
                @Html.HiddenFor(model => model.Title)
                @Html.DisplayFor(model => model.Title)
        </div><br /><br />
        <div class="form-group">
            <div class="col-sm-3">
                @Html.LabelFor(model => model.Description)
            </div>
                @Html.HiddenFor(model => model.Description)
                @Html.DisplayFor(model => model.Description)
        </div><br /><br />
        <div class="form-group">
            <div class="col-sm-1"></div>
            <div class="col-sm-3">
                <button type="submit" class="btn btn-primary">Create</button>
                @Html.ActionLink("Cancel", "CreatePost", new { @class = "btn btn-primary" })
            </div>
        </div>
    </form>
}



